<Window x:Class="SudokuSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SudokuSolver"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <Grid>
        <!-- Define Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- For the title -->
            <RowDefinition Height="*"/>
            <!-- For the Sudoku Grid -->
            <RowDefinition Height="Auto"/>
            <!-- For the button -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Full width of the window -->
        </Grid.ColumnDefinitions>

        <!-- Title Text at the top -->
        <TextBlock Text="Sudoku Solver !" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="10"/>

        <!-- Replace the existing SudokuGrid definition with this -->
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="2">
            <Grid Name="SudokuGrid" Margin="10">
                <!-- Dynamic Grid -->
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Solve Sudoku" Click="CollectButton_Click" Margin="10"/>
            <Button Content="Try your own sudoku!" Click="ClearButton_Click" Margin="10"/>
            <Button Content="Re-Load the Sample Sudoku " Click="ReloadButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
